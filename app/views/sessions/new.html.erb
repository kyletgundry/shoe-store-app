<h3>Login:</h3>

<%= form_tag "/login", method: :post do %>
  <div>
    <label for="email">Email:</label>
    <input type="email" name="email">
  </div>
  <div>
    <label for="password">Password:</label>
    <input type="password" name="password">
  </div>
  <input type="submit" value="Log In">
<% end %>