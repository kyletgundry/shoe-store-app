<h1>Update your shoe:</h1>

  <% if @shoe.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>
     
        <ul>
        <% @shoe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<%= form_tag "/shoes/#{@shoe.id}", method: :patch do %>
  <div class="form-group">
    Brand Name: <input type="text" name="brand" value="<%= @shoe.brand %>" class="form-control">
  </div>
  <div class="form-group">
    Price: <input type="text" name="price" value="<%= @shoe.price %>" class="form-control">
  </div>
  <div class="form-group">
    Description: <input type="text" name="description" value="<%= @shoe.description %>" class="form-control">
  </div>
    <div class="form-group">
    Supplier ID: <input type="text" name="supplier_id" value="<%= @shoe.supplier_id %>" class="form-control">
  </div>
  <input type="submit" value="Update Shoe" class="btn btn-default">
<% end %>
<p></p>
<a href="/shoes" class="btn btn-default">Cancel</a>