<h1>Here are all your shoes:</h1>

<a href="/shoes/new" class="btn btn-default">Add a New Shoe</a>

<% @shoes.each do |shoe| %>
  <h3>Brand:</h3>
  <a href="/shoes/<%= shoe.id %>"><p><%= shoe.brand %></p></a>
  <h3>Price:</h3>
  <p>$<%= shoe.price %></p>
  <h3>Image:</h3>
  <p><img src="<%= shoe.image %>" alt="Shoe Image" style="size: 260x180px;"></p>
  <h3>Description:</h3>
  <p><%= shoe.description %></p>
  
<%= form_tag "/shoes/#{shoe.id}", method: :delete do %>
<input type="submit" value="Remove Shoe">
<% end %>
<p></p>
  <a href="/shoes/<%= shoe.id %>/edit" class="btn btn-default" >Update Shoe</a>
