<h1>Add New Shoe:</h1>


  <% if @shoe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>
   
      <ul>
      <% @shoe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_tag "/shoes", method: :post do %>
  <div class="form-group">
    Brand Name: <input type="text" name="brand" class="form-control" placeholder="Brand" value="<%= @shoe.brand %>">
  </div>
  <div class="form-group">
    Price: <input type="text" name="price" class="form-control" placeholder="Price" value="<%= @shoe.price %>">
  </div>
  <div class="form-group">
    Image: <input type="text" name="image" class="form-control" placeholder="Image">
  </div>
  <div class="form-group">
    Description: <input type="text" name="description" class="form-control" placeholder="Description" value="<%= @shoe.description %>">
  </div>
  <div class="form-group">
    Supplier ID: <input type="text" name="supplier_id" class="form-control" placeholder="Supplier ID" value="<%= @shoe.supplier_id %>">
  </div>
  <input type="submit" value="Add Shoe" class="btn btn-default">
<% end %>
<p></p>
<div><a href="/shoes" class="btn btn-default">Cancel</a></div>