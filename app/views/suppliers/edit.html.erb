<h1>Update your supplier:</h1>

<%= form_tag "/suppliers/#{@supplier.id}", method: :patch do %>
  <div class="form-group">
    Supplier Name: <input type="text" name="name" value="<%= @supplier.name %>" class="form-control">
  </div>
  <div class="form-group">
    Email: <input type="text" name="email" value="<%= @supplier.email %>" class="form-control">
  </div>
  <div class="form-group">
    Phone: <input type="text" name="phone" value="<%= @supplier.phone %>" class="form-control">
  </div>
  <input type="submit" value="Update Supplier" class="btn btn-default">
<% end %>
<p></p>
<a href="/suppliers" class="btn btn-default">Cancel</a>