<h1>Add New Supplier:</h1>

<%= form_tag "/suppliers", method: :post do %>
  <div class="form-group">
    Brand Name: <input type="text" name="name" class="form-control" placeholder="Name">
  </div>
  <div class="form-group">
    Price: <input type="text" name="email" class="form-control" placeholder="Email">
  </div>
  <div class="form-group">
    Image: <input type="text" name="phone" class="form-control" placeholder="Phone">
  </div>
  <input type="submit" value="Add Supplier" class="btn btn-default">
<% end %>
<p></p>
<div><a href="/suppliers" class="btn btn-default">Cancel</a></div>